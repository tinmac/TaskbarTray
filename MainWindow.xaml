                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image
                Width="28"
                Height="28"
                Margin="8 6 8 6"
                VerticalAlignment="Center"
                Source="ms-appx:///Assets/AppIcon.ico" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{ThemeResource TitleLargeTextBlockStyle}"
                Text="Power Switch" />

