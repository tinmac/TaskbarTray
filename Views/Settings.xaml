<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PowerSwitch.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:PowerSwitch.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PowerSwitch.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:stuff="using:PowerSwitch.stuff"
    xmlns:wct="using:CommunityToolkit.WinUI.Controls"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <Grid Margin="0 0 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="20 10 10 10"
            Style="{ThemeResource TitleLargeTextBlockStyle}"
            Text="Settings" />

        <ScrollViewer Grid.Row="1">

            <StackPanel x:Name="ContentArea">

                <!--  Temperature Unit Card  -->
                <wct:SettingsCard Margin="16 0 16 16" Header="Temperature Unit">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <ComboBox
                            x:Name="TemperatureUnitComboBox"
                            Width="140"
                            Margin="16 0 0 0"
                            VerticalAlignment="Center"
                            ItemsSource="{x:Bind ViewModel.TemperatureUnits, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.TemperatureUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </wct:SettingsCard>

                <!--  Start with Windows Card  -->
                <wct:SettingsCard Margin="16 0 16 16" Header="Start when Windows starts">
                    <StackPanel>
                        <ToggleSwitch
                            IsOn="{x:Bind ViewModel.StartWithWindows, Mode=TwoWay}"
                            OffContent="Disabled"
                            OnContent="Enabled" />
                    </StackPanel>
                </wct:SettingsCard>

                <!--  Power Plan Toggle Card  -->
                <wct:SettingsCard Margin="16 0 16 16" ContentAlignment="Left">
                    <StackPanel>
                        <TextBlock
                            Margin="0 0 0 0"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"
                            Text="Included Power Plans for Toggle" />
                        
                        <TextBlock
                            Margin="0 0 0 10"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="Pick the plans here that you wish to toggle between when you click the guage icon in the windows task bar notification area" />

                        <CheckBox
                            Margin="0 4 0 0"
                            Content="Power Saver"
                            IsChecked="{x:Bind ViewModel.IncludePowerSaver, Mode=TwoWay}" />
                        <CheckBox
                            Margin="0 4 0 0"
                            Content="Balanced"
                            IsChecked="{x:Bind ViewModel.IncludeBalanced, Mode=TwoWay}" />
                        <CheckBox
                            Margin="0 4 0 0"
                            Content="High Performance"
                            IsChecked="{x:Bind ViewModel.IncludeHighPerformance, Mode=TwoWay}" />
                       
                        <TextBlock
                            Margin="0 8 0 0"
                            Foreground="OrangeRed"
                            FontWeight="Bold"
                            TextWrapping="Wrap"
                            Text="{Binding PowerPlanSelectionError, Mode=OneWay}" />
                    </StackPanel>
                </wct:SettingsCard>

                <!--  Theme Card  -->
                <wct:SettingsCard
                    Margin="16 0 16 16"
                    ContentAlignment="Left"
                    Header="Theme">
                    <StackPanel>
                        <TextBlock
                            Margin="0 0 0 10"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"
                            Text="Theme" />

                        <StackPanel>
                            <RadioButton
                                Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                Content="Light"
                                FontSize="15"
                                GroupName="AppTheme"
                                IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}">
                                <RadioButton.CommandParameter>
                                    <xaml:ElementTheme>Light</xaml:ElementTheme>
                                </RadioButton.CommandParameter>
                            </RadioButton>
                            <RadioButton
                                Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                Content="Dark"
                                FontSize="15"
                                GroupName="AppTheme"
                                IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}">
                                <RadioButton.CommandParameter>
                                    <xaml:ElementTheme>Dark</xaml:ElementTheme>
                                </RadioButton.CommandParameter>
                            </RadioButton>
                            <RadioButton
                                Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                Content="Default"
                                FontSize="15"
                                GroupName="AppTheme"
                                IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default, Mode=OneWay}">
                                <RadioButton.CommandParameter>
                                    <xaml:ElementTheme>Default</xaml:ElementTheme>
                                </RadioButton.CommandParameter>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>
                </wct:SettingsCard>

                <!--  Sensors Service Status Card  -->
                <wct:SettingsCard Margin="16 0 16 16" Header="Sensors Service Status" Description="The sensor service is installed when you install the app, it reports CPU temperature and the active power plan">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="4 0 0 0"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"
                            Text="{x:Bind ViewModel.ServiceStatusText, Mode=OneWay}" />
                    </StackPanel>
                </wct:SettingsCard>

                <!--  App Version (not in card)  -->
                <StackPanel Margin="10 10 0 10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="v" />
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.VersionDescription, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
