        <tb:TaskbarIcon.ContextFlyout>

            <MenuFlyout
                x:Name="MyMenuFlyout"
                AreOpenCloseAnimationsEnabled="False"
                Closing="MyMenuFlyout_Closing">

                <MenuFlyoutItem Command="{x:Bind ExitApplicationCommand}" Text="Exit" />

                <MenuFlyoutSeparator />

                <ToggleMenuFlyoutItem
                    Command="{x:Bind HighPerformanceCommand}"
                    IsChecked="{x:Bind IsHighChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="High Performance" />

                <ToggleMenuFlyoutItem
                    Command="{x:Bind BalancedCommand}"
                    IsChecked="{x:Bind IsBalancedChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="Balanced" />

                <ToggleMenuFlyoutItem
                    Command="{x:Bind PowerSaverCommand}"
                    IsChecked="{x:Bind IsSaverChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="Power Saver" />

                <MenuFlyoutSeparator />

                <MenuFlyoutItem Command="{x:Bind ShowHideWindowCommand}" Text="Show/Hide Window" />


            </MenuFlyout>

        </tb:TaskbarIcon.ContextFlyout>

