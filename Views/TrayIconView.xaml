<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="TaskbarTray.Views.TrayIconView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TaskbarTray.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TaskbarTray.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="using:H.NotifyIcon"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToImageSourceConverter
            x:Key="BoolToImageSourceConverter"
            FalseImage="ms-appx:///Assets/Inactive.ico"
            TrueImage="ms-appx:///Assets/Red.ico" />
    </UserControl.Resources>

    <tb:TaskbarIcon
        x:Name="TrayIcon"
        x:FieldModifier="public"
        ContextMenuMode="SecondWindow"
        IconSource="{x:Bind IsWindowVisible, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToImageSourceConverter}}"
        LeftClickCommand="{x:Bind ShowHideWindowCommand}"
        NoLeftClickDelay="True">

        <tb:TaskbarIcon.ContextFlyout>

            <MenuFlyout
                x:Name="MyMenuFlyout"
                AreOpenCloseAnimationsEnabled="False"
                Closing="MyMenuFlyout_Closing">

                <ToggleMenuFlyoutItem
                    Command="{x:Bind OptionOneCommand}"
                    IsChecked="{x:Bind IsOptionOneChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="Option One" />

                <ToggleMenuFlyoutItem
                    Command="{x:Bind OptionTwoCommand}"
                    IsChecked="{x:Bind IsOptionTwoChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="Option Two" />

                <ToggleMenuFlyoutItem
                    Command="{x:Bind OptionThreeCommand}"
                    IsChecked="{x:Bind IsOptionThreeChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="Option Three" />

                <MenuFlyoutSeparator />

                <MenuFlyoutItem Command="{x:Bind ShowHideWindowCommand}" Text="Show/Hide Window" />

                <MenuFlyoutSeparator />

                <MenuFlyoutItem Command="{x:Bind ExitApplicationCommand}" Text="Exit" />

            </MenuFlyout>

        </tb:TaskbarIcon.ContextFlyout>

    </tb:TaskbarIcon>

</UserControl>
